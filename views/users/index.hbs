<h1 class="pageHeader">Users</h1>

{{#each users}}
<div class="userContainer">
        <div class="card" style="width: 400px; height: 500px;">
                <div class="card-image">
                        <figure class="image is-4by3">
                                ] <img src={{image}} alt="">
                        </figure>
                </div>
                <div class="card-content">
                        <div class="media">

                                <div class="media-content">
                                        <p class="title is-3">@{{username}}</p>
                                        <p class="title is-5">{{email}}</p>

                                        <form action="/user-profile/{{_id}}?_method=DELETE" method="POST">
                                                <button class="button is-link is-info" type="submit">Delete</button>
                                        </form>
                                </div>
                        </div>

                        <div class="content">

                        </div>

                </div>
        </div>
</div>
{{/each}}
